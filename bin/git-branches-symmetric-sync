#!/usr/bin/env php
<?php

require __DIR__ . '/../vendor/autoload.php';

use ContaoCommunityAlliance\BuildSystem\VcsSync\Command\GitBranchesSymmetricSyncCommand;
use ContaoCommunityAlliance\BuildSystem\VcsSync\Command\SingleCommandApplication;

set_error_handler(
    function ($errno, $errstr, $errfile, $errline) {
        throw new ErrorException($errstr, 0, $errno, $errfile, $errline);
    }
);

$command = new GitBranchesSymmetricSyncCommand('vcs-synchronizer:git-branches-symmetric');

$application = new SingleCommandApplication($command);
$application->run();
