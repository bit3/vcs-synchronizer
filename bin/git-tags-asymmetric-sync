#!/usr/bin/env php
<?php

$includeIfExists = function($file)
{
    return file_exists($file) ? include $file : false;
};

if (
    (!$loader = $includeIfExists(__DIR__.'/../vendor/autoload.php'))
    && (!$loader = $includeIfExists(__DIR__.'/../../../autoload.php'))
) {
    echo 'You must set up the project dependencies, run the following commands:'.PHP_EOL.
        'curl -sS https://getcomposer.org/installer | php'.PHP_EOL.
        'php composer.phar install'.PHP_EOL;
    exit(1);
}

use ContaoCommunityAlliance\BuildSystem\VcsSync\Command\GitTagsAsymmetricSyncCommand;
use ContaoCommunityAlliance\BuildSystem\VcsSync\Command\SingleCommandApplication;

set_error_handler(
    function ($errno, $errstr, $errfile, $errline) {
        throw new ErrorException($errstr, 0, $errno, $errfile, $errline);
    }
);

$command = new GitTagsAsymmetricSyncCommand('vcs-synchronizer:git-tags-asymmetric');

$application = new SingleCommandApplication($command);
$application->run();
